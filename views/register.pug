extends layout 

block content
    h1= title

    form(method='POST' action='')
        div.form-group
            label(for='email') Email: 
            input#email.form-control(type='text', placeholder='email@example.com', name='email')

            label(for='password') Password: 
            input#password.form-control(type='password', placeholder='********', name='password')
        button.btn.btn-primary(type='submit') Submit